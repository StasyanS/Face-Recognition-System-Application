            <Label Text="Введите логин вашего аккаунта" 
               TextColor="Black"
               HorizontalTextAlignment="Center"
               FontSize="30"
               Margin="5"
                   />
            <Frame BackgroundColor="#F1F1F1" 
                   WidthRequest="450"
                   HeightRequest="80"
                   CornerRadius="12" 
                   Margin="5">
                <Entry x:Name="txtName" 
                       Placeholder="IvanII9872" 
                       HorizontalTextAlignment="Center" 
                       VerticalTextAlignment="Center"
                       WidthRequest="200" 
                       TextColor="Black"
                       Grid.Row="4" 
                       Grid.Column="1" />
            </Frame>


