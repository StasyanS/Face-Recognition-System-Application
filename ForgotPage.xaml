            Grid.Row="1"
            Grid.Column="1" 
            TextColor="Black"
            FontSize="Large"
            Margin="20"
            />
        
            <Image Source="logo2.png"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Grid.Row="0"
                Grid.Column="1"
                WidthRequest="150"
                HeightRequest="150"
                Margin="0,0,0,10"
